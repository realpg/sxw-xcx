<!-- 名片 -->
<view class='card'>
  <view class='card_css' style='position:relative'>
    <image class='head_Img' src='{{business_card.avatarUrl}}'></image>
    <view class='truename'>{{business_card.truename}}</view>
    <view class='career_css'>
      <view class='career'>{{business_card.career}}</view>
      <view class='state itemscenter'>
        <view wx:if="{{business_card.updating}}">
          <text class='redactInfo_css' style='background:gray'>审核中</text>
        </view>
        <view wx:else="">
          <text bindtap='redactClick' class='redactInfo'>编辑资料</text>
        </view>
      </view>
    </view>
    <view class='card_company'>公司：{{business_card.company}}</view>
    <view class='card_company'>地址：{{business_card.companyInfo.address}}</view>
    <view class='card_company'>电话：<text class='card_mobile'>{{business_card.mobile}}</text> </view>
    <view class='share'>
      <button open-type='share' class='share_but'>
        <image class='share_Img' src='../../images/store/share.png' mode='widthFix'></image>
      </button>
    </view>
    <view class='card_business'>主营：{{business_card.companyInfo.business}}</view>
  </view>

  <view class='name_of_index'>
    <view>
      <text class='card_mobile'> {{business_card.businesscard.view}} </text> 人气</view>
    <view>
      <text class='card_mobile'> {{business_card.businesscard.agree}} </text> 点赞</view>
    <view>
      <text class='card_mobile'> {{business_card.businesscard.favorite}} </text> 关注</view>
  </view>
</view>


