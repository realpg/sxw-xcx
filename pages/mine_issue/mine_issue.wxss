page{
  background: #f1f4f6;
}

.card {
  width: 100%;
  margin: auto;
  background: #fff;
  padding: 2% 0  0 0;
}

.card_css {
  width: 85%;
  margin: auto;
  background: #fff;
  border: 3rpx solid #f1f4f6;
  padding: 3% 3% 0% 3% ;
  border-radius: 20rpx;
  box-shadow: 3rpx 3rpx 3rpx 3rpx #e6eaf2;
}

.truename {
  font-size: 38rpx;
  line-height: 60rpx;
}

.career {
  font-size: 26rpx;
  color: #999;
  line-height: 50rpx;
}

.card_company {
  font-size: 28rpx;
  line-height: 60rpx;
}

.card_mobile {
  color: #f7a821;
}

.card_business {
  margin-top: 10rpx;
  border-top: 1rpx solid #e6eaf2;
  font-size: 28rpx;
  line-height: 90rpx;
  display: -webkit-box;
  align-items: center;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  height:90rpx;
}

.head_Img {
  width: 120rpx;
  height: 120rpx;
  float: right;
  border-radius: 50%;
}

.name_of_index {
  width: 60%;
  margin: auto;
  font-size: 26rpx;
  display: flex;
  justify-content: space-around;
  height: 120rpx;
  align-items: center;
  color: #333333;
}


.Css{
   border:15rpx solid #f1f4f6; 
}
.business_card{
  background:#fff;
  width: 85%;
  margin: auto;
  padding: 3% 3% 1% 3%;
  font-size: 26rpx;
  color: #666;
  line-height: 60rpx;
  align-items: center;
  box-shadow: 0 6rpx 6rpx #888888;
}
.name{
  color: black;
  font-size: 32rpx;
}
.post{
  margin-left: 20rpx;
  color: #666;
  font-size: 26rpx;
}
.The_main{
  padding: 15rpx 0 10rpx 0 ;
  border-top: 1rpx solid #f1f4f6;
  line-height: 46rpx;
}


.headImg{
  width: 130rpx;
  height: 130rpx;
  float: right;
  border-radius: 50%;
}
.iconImg{
  margin-right: 20rpx;
  width: 28rpx;
  height: 34rpx;
}
.options{
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.optionsImg{
  width: 32rpx;
  margin-right: 10rpx;
}


.information_classification{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background: #fff;
  display: flex;
  justify-content: space-around;
  line-height: 90rpx;
  font-size: 30rpx;
  color:  #9B9B9B;
}
.all{
  color:#01C46C;
}



.information{
  width: 100%;
  margin: auto;
  
}
.information_css{
  padding: 1% 5% 2% 5%;
 font-size: 24rpx;
 margin-top: 10rpx;
  background: #fff;
  position: relative;
}
.menu{
  display: flex; 
  justify-content:space-between;
  color: #888888;
}
.redact{
  display: flex;
  align-items: center;
}
.redact_css{
  display: flex; 
  width: 60%;
  justify-content:space-between;
}
.content{
   line-height: 40rpx;
  font-size: 24rpx;
   display: -webkit-box;
   align-items: center;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.dianzan_css{
  display: flex;
  align-items: center;
}
.time{
  line-height: 60rpx;
  font-size: 22rpx;
  color:#9B9B9B
}
.Img_edit{
  width: 30rpx;
  height: 30rpx;
}
.Img_eye{
  width: 35rpx;
  height: 30rpx;
}
.lable{
  line-height: 80rpx;
  display: flex;
}
.lable_one, .lable_two, .lable_three{
  padding: 6rpx 20rpx;
