<!--名片 -->
<view class='Css'></view>
<view class='business_card'  bindtap='select_card_Click'  >
  <view class='business_card_css'>
    <view class='name'>{{business_card.businesscard.truename}}
      <text class='post'>{{business_card.career}}</text>
      <!-- <image class='selectImg' src='{{selectImg}}'></image> -->
      <image class='headImg' src='{{business_card.avatarUrl}}'></image>
    </view>

    <view>
      <image class='iconImg' src='../../images/store/btn_dianhua.png'></image>
      <text>{{business_card.mobile}} </text>
    </view>
    <view>
      <image class='iconImg' src='../../images/store/company.png'></image>
      <text>{{business_card.company}} </text>
    </view>
    <view>
      <image class='iconImg' src='../../images/store/map.png'></image>
      <text>{{business_card.companyInfo.address}} </text>
    </view>
    <view class='The_main'>主营：{{business_card.companyInfo.business}}</view>
  </view>
</view>

<!-- 选择发布信息 -->
<view class='select_Info' wx:for='{{messageALL}}' data-id='{{item.id}}'bindtap='selectClick'>
  <view class='select_Info_css'>
    <view wx:if="{{item.mid =='5'}}"><text class='type'>{{item.demand}}</text></view>
    <view wx:if="{{item.mid =='6'}}"><text style='background:#F7CF9A' class='type'>{{item.demand}}</text></view>
    <view wx:if="{{item.mid =='88'}}"><text class='type' style='background:#9A9CF7'>{{item.demand}}</text></view>
    <view><image class='selectImg_css' src='{{item.selectImg}}'></image></view>
  </view>
  <view class='content'>{{item.details}}</view>
  <view class='time'>发布时间：{{item.time}}</view>
</view>

<view class='bottom'></view>
<!-- 确定 取消 -->
<view class='button'>
  <view class='cancel_button'>取消</view>
  <view class='confirm_button'>确认</view>
</view>