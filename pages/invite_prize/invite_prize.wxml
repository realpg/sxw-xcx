  <view class='earnings_mine'>我的收益</view>
  <view class='gold_user'>
    <view class='gold_mine'>
      <image class='Image_gold_mine'  src='../../images/personal_center/icon_gold.png'></image>
      <view class='text'>我赚取得金币</view>
      <view class='text_color'>{{gold}}个</view>
