<!-- 签到 -->
<view class='sign_in'>
  <view class='sign_in_css'>
    <view bindtap='goldListClick'>金币：
      <text class='gold'>{{business_card.credit}}</text>
    </view>
    <view>
      <text bindtap='singInClick' class='singIn'>签到</text>
    </view>
    <view>
      <text class='gain' bindtap='gainClick'>获取金币</text>
    </view>
  </view>

  <view class='sign_in_date' >
    <view class='sign_in_date_css' wx:for='{{sign_in_date}}' style='position:relative'>
      <image class='sign_in_Img' src='{{item.isSignin?"../../images/personal_center/oval_gold.png":"../../images/personal_center/gold.png"}}'></image>

      <view  wx:if="{{weekday==index+1||(weekday==0&&index==6)}}"><image  
      class='icon_tick_Img' src='../../images/personal_center/icon_tick.png'></image></view>
      <view class='week' style="color:red" wx:if="{{weekday==index+1||(weekday==0&&index==6)}}">{{item.week}}</view>
      <view wx:else class='week'>{{item.week}}</view>
    </view>
  </view>
</view>

