<!--分类-->
<view class='information_classification'>
  <view class='all' style='color:{{all_color}}' data-nn='1' bindtap='selectClick'>全部</view>
  <view style='color:{{supply_color}}' data-nn='2' bindtap='selectClick'>供应信息</view>
  <view style='color:{{buy_color}}' data-nn='3' bindtap='selectClick'>求购信息</view>
  <view style='color:{{equipment_color}}' data-nn='4' bindtap='selectClick'>纺机贸易</view>
</view>

<!--具体信息-->
<view class='message' wx:for='{{message}}' wx:for-index='id'>
  <view class='messageCss'    data-id='{{item.id}}'>
    <view class='head_portrait'>
      <image class='head_portrait_icon' src='{{item.head_portrait_icon}}' mode='widthFix'/>
      <image class='icon_vip' src='{{item.icon_vip!=0?"../../images/index/vip.png":""}}' mode='widthFix'/>
    </view>

    <view class='The_specific_details'>
        <view class='The_specific_details_one'>
          <text class='datails_name'>{{item.name}}</text>
          <text class='position'>{{item.position}}</text>
         <text  wx:if="{{item.demand =='供应'}}" class='demand'>{{item.demand}}</text>
          <text  wx:if="{{item.demand =='求购'}}" class='demand' style='background:#F7CF9A'>{{item.demand}}</text>
          <text  wx:if="{{item.demand =='纺机'}}" class='demand' style='background:#9A9CF7'>{{item.demand}}</text>
          <image bindtap='phoneClick' class='btn_dianhua' data-id='{{item.id}}'src='../../images/index/btn_dianhua.png' mode='widthFix'/>
        </view>
        <view class='company'>{{item.company}}</view>
        <view>
          <text wx:if="{{item.lableList[0]}}" class='lable_three'>{{item.lableList[0].lable}}</text>
          <text wx:if="{{item.lableList[1]}}" class='lable_four'>{{item.lableList[1].lable}}</text>
          <text wx:if="{{item.lableList[2]}}" class='lable_five'>{{item.lableList[2].lable}}</text>
        </view>
        <view class='details'>{{item.details}}</view>

        <view class='message_Img'>
          <view class='message_Image' wx:for='{{item.message_Img}}'>
          <image class='message_Image_Css' src='{{item.message_Image}}'/>
          </view>
        </view>

        <view class='time'>{{item.time}}</view>
        <view>
          <image class='icon_map' src='../../images/index/icon_map.png'/>
          <text class='address'>存放地：{{item.address}}</text>
        </view>
        <view class='eye_dianzan'>
          <view class='eye_Css'><image class='eye' src='../../images/index/eye.png'/> <text class='view'>{{item.page_view}}</text></view>
            <view class='dianzan_Css'><image class='dianzan'  src='../../images/index/dianzan.png'/> <text class='like'>{{item.like}}</text></view>
            <view class='see_details' bindtap='see_details_click'>查看详情 >></view>
        </view>
    </view>
  </view>
</view>

