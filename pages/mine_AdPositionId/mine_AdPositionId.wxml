  <view style='background:url({{item.bgImg}}) no-repeat;background-size:100% 100%;' class='advertising_position' wx:for='{{advertising_position}}' bindtap='selectClick'>
    <view class='title'>{{item.ad.desc}}</view>
    <view class='advertising_position_css'>
      <image class='Img' src='{{item.adplace.icon_path}}'></image>
    </view>
    <view class='time_css'>
