  color: #01C46C;
  border-radius: 8rpx;
  font-size: 20rpx;
}
 .lable_two{
   margin:0 30rpx; 
   background:#FFE5C0;
  color:#FFA827;
 }
 .text_css{
   margin-left: 10rpx;
 }
.state{
  position: absolute;
  right:20rpx;
}
 .state_css{
   line-height: 50rpx;
   background: gray;
   border: gray;
   color:#fff;
   padding: 5rpx 12rpx;
   border-radius: 6rpx;
   font-size: 22rpx;
 }
 .state_css_two{
   line-height: 50rpx;
   background: #01C46C;
   border: #01C46C;
   color:#fff;
   padding: 6rpx 14rpx;
