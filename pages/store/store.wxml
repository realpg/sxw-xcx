<!--搜索框-->
<view class='searchBox' bindtap='serchClick'>
  <image class='searchIcon' src='../../images/index/icon_search.png' mode='widthFix'></image>
  <input class='searchInput' placeholder='请输入名称/品类/商家' maxlength='20' placeholder-style='color:#b2b2b2' disabled="disabled">
  </input>
</view>


<!--分类-->

<view class='classifyList'>
  <view class='classify' wx:for='{{classify}}' wx:for-index='id'>
    <view class='ci' bindtap='classifyClick' data-id='{{item.id}}'>
      <view class='ciImg'>
        <image class='cimg' src='{{item.cimg}}'></image>
      </view>
      <view class='ciName'>{{item.ciName}}</view>
    </view>
  </view>
</view>

<!--店铺轮播图 -->
<view class='RS_list'>
  <swiper class='RS_list_css' autoplay='true' interval='6000'>
    <view class='recommend_store_List'>
      <block wx:for='{{recommend_store_List}}'>
        <swiper-item class='recommend_store'>

          <view class='recommend_store_css' wx:for='{{item.business_card}}' bindtap='enter_store_click' data-id='{{item.id}}'>
            <view class='business_card_css'>
              <view class='name_css'>{{item.name}}
                <text class='post_css'>{{item.post}}</text>
               
                <image class='headImg_css' src='../../images/index/head_portrait.png'></image>
              </view>

              <view>
                <image class='iconImg_css' src='../../images/store/btn_dianhua.png'></image>
                <text>{{item.phone}} </text>
              </view>
              <view>
                <image class='iconImg_css' src='../../images/store/company.png'></image>
                <text>{{item.company}} </text>
              </view>
              <view>
                <image class='iconImg_css' src='../../images/store/map.png'></image>
                <text>{{item.address}} </text>
              </view>
              <view class='The_main_css'>主营：{{item.The_main}}</view>
                <text class='enter_css'>名片详情</text>       
            </view>
          </view>

        </swiper-item>
      </block>
    </view>
  </swiper>
</view>

