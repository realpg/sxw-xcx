<view>
  <image class='adcImg' src='{{advImg}}'></image>
</view>


<!-- 价格栏 -->
<view class='price_column' >
<radio-group class="radio-group" bindchange="radioChange">
  <radio value="2" class="radio"><text class='price'>{{advertisingVIP[2].amount}}金币/{{advertisingVIP[2].druation/86400}}天</text></radio>
  <radio value="1" class="radio" ><text class='price'>{{advertisingVIP[1].amount}}金币/{{advertisingVIP[1].druation/86400}}天</text></radio>
  <radio value="0" class="radio"><text class='price'>{{advertisingVIP[0].amount}}金币/{{advertisingVIP[0].druation/86400}}天</text></radio>
</radio-group>
</view>


<!-- 广告位截止时间 -->
<view class='hint'>
  <view  class='hint_time'>VIP预计截止时间：{{hint_time}}</view>
  <view class='hint_context'>提示：非VIP用户支付成功后，VIP身份会立即生效。VIP用户支付成功后，会在已购买的VIP全部过期后生效</view>
</view>

<!-- 金币 -->
<view class='gold' >
  <view>我的金币：<text class='mine_gold'>{{userinfo.credit}}</text></view>
  <view>本次扣除：<text class='pay_gold'>{{pay_gold}}</text></view>
  <view class='gain_gold' bindtap='gain_goldClick'>获取金币</view>
</view>

<!-- 确认按钮 -->
<view wx:if="{{!paying}}" bindtap='payClick' class='confirm_button'>立即支付</view>
<view wx:else="" class='confirm_button_disable'>等待支付完成...</view>