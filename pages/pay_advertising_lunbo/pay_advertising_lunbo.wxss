page{
  background: #f5f5f5;
}
.adcImg{
  width: 100%;
  height: 300rpx;
}
.price_column{
  background: #fff;
  padding: 26rpx 0;
  margin-bottom: 20rpx;
}
.radio {
    display: block;
    line-height: 90rpx;
    margin-left: 10%;
    font-size: 28rpx;
}
.price{
  margin-left: 50rpx;
}

.hint{
  background: #fff;
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx;
  padding: 20rpx 0 60rpx 0;
}
.hint_time{
  line-height: 60rpx;
}
.hint_context{
  width: 90%;
  margin: auto;
  color: #9C9C9C;
  font-size: 24rpx;
}

.gold{
  margin-top: 100rpx;
  display: flex;
  justify-content: space-around;
  font-size: 26rpx;
  color: #9C9C9C;
}
.mine_gold, .pay_gold{
  color:#F5A623;
  font-size: 26rpx;
}
.gain_gold{
  border: 1rpx solid #01C46C;
  color:#01C46C;
  font-size: 22rpx;
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
}

.confirm_button{
  width: 100%;
  height: 100rpx;
  background:#01C46C;
  color: #FFFFFF;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  }

.select_lunbo{
    font-size: 30rpx;
    line-height: 70rpx;   
}
  .select_lunbo_block{
    display: block;
  }
  .select_lunbo_none{
     display: none;
  }
.select_lunbo_price{
  display: flex;
  justify-content: space-between;
  width: 90%;
  margin: auto;
  border-bottom:1rpx solid #f5f5f5;
  align-items: center;
  }
  .jiantou_img{
    width: 30rpx;
    height: 20rpx;
  }
  .jiantou_css_img{
    width: 20rpx;
    height: 30rpx;
  }